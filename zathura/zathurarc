/* Basic Settings */

set highlight-transparency .1
set zoom-center "true"
set selection-clipboard clipboard
set render-loading "false"
map <Space> toggle_index
map K zoom in
map J zoom out
map p print
map b recolor


/* theme */

# Light/Default mode settings:
set notification-error-bg       "#f44747"
set notification-error-fg       "#acb0d0"
set notification-warning-bg     "#dcdcaa"
set notification-warning-fg     "#1a1b26"
set notification-bg             "#1a1b26"
set notification-fg             "#af88F1"

set completion-bg               "#2d2d30"
set completion-fg               "#acb0d0"
set completion-group-bg         "#2d2d30"
set completion-group-fg         "#acb0d0"
set completion-highlight-bg     "#062c45"
set completion-highlight-fg     "#acb0d0"

set index-bg                    "#1a1b26"
set index-fg                    "#acb0d0"
set index-active-bg             "#af88e1"
set index-active-fg             "#282a36"

set inputbar-bg                 "#ffaf00"
set inputbar-fg                 "#1a1b26"
set statusbar-bg                "#9f78e1"
set statusbar-fg                "#ffffff" 

set highlight-color             "#264f78"
set highlight-active-color      "#dcdcaa"

set default-bg                  "#1a1b26"
set default-fg                  "#acb0d0"

set render-loading              true
set render-loading-fg           "#1a1b26"
set render-loading-bg           "#acb0d0"

# Recolor mode settings
set recolor-lightcolor          "#1a1b26" # Background
set recolor-darkcolor           "#acb0d0" # Foreground


# Startup options
set adjust-open width
set recolor true
